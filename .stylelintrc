{
  "extends": "stylelint-prettier/recommended",
  "plugins": [
    "stylelint-prettier",
    "stylelint-order",
    "stylelint-scss"
  ],
  "rules": {
    "order/order": [
      [
        "custom-properties",
        "declarations"
      ]
    ],
    "order/properties-order": [
      "position",
      "top",
      "right",
      "bottom",
      "left",

      "display",
      
      "margin",
      "padding",
      "width",
      "height",

      "font-size",
      "line-height",

      "background-color",
      "background",
      "border",
      "border-radius",
      "box-shadow",
      "outline"
    ],
    "indentation": null,
    "no-descending-specificity": null,
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global",
          "local",
        ]
      }
    ],
    "scss/selector-no-redundant-nesting-selector": true,
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "length-zero-no-unit": true,
  }
}